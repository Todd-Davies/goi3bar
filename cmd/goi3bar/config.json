{
    "entries": [
        {
            "package": "cpu_load",
            "name": "cpu_load",
            "options": {
                "interval": "5s",
                "warn_threshold": 0.8,
                "crit_threshold": 1.0
            }
        },
        {
            "package": "cpu_util",
            "name": "cpu_util",
            "options": {
                "interval": "5s",
                "warn_threshold": 75,
                "crit_threshold": 90
            }
        },
        {
            "package": "memory",
            "name": "memory",
            "options": {
                "interval": "5s",
                "warn_threshold": 75,
                "crit_threshold": 85
            }
        },
        {
            "package": "disk_usage",
            "name": "disk_usage",
            "options": {
                "interval": "5s",
                "options": {
                    "warn_threshold": 5,
                    "crit_threshold": 2,
                    "items": [
                        {
                            "name": "root",
                            "path": "/"
                        },
                        {
                            "name": "home",
                            "path": "/home"
                        }
                    ]
                }
            }
        },
        {
            "package": "battery",
            "name": "intBat",
            "options": {
                "interval": "5s",
                "name": "âš¡",
                "identifier": "BAT0",
                "warn_threshold": 25,
                "crit_threshold": 15
            }
        },
        {
            "package": "network",
            "name": "network",
            "options": {
                "interval": "5s",
                "config": {
                    "devices": {
                        "eth": {
                            "name": "eth",
                            "identifier": "eth0"
                        },
                        "wifi": {
                            "name": "wifi",
                            "identifier": "wlan0",
                            "wireless": {
                                "warn_threshold": 40,
                                "crit_threshold": 20
                            }
                        },
			"usb": {
			    "name": "usb",
			    "identifier": "usb0"
			}
                    },
                    "preference": [
			"usb",
                        "wifi",
                        "eth"
                    ]
                }
            }
        },
        {
            "package": "clock",
            "name": "mucTime",
            "options": {
                "format": "Munich: %a %d-%b-%y %I:%M:%S",
                "color": "#FFFFFF",
                "location": "Europe/Berlin"
            }
        }
    ],
    "interval": "1s",
    "colors": {
        "color_crit": "#FF0000",
        "color_warn": "#FFA500",
        "color_ok": "#00FF00",
        "color_general": "#FFFFFF"
    }
}
